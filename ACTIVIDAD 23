#include <stdio.h>
#include <math.h>

int main() {
    float a, b, c, s, area;

    printf("Ingrese las longitudes de los lados a, b y c del tri√°ngulo:\n");
    scanf("%f %f %f", &a, &b, &c);
    
    s = (a + b + c) / 2;
    
   area = sqrt(s*(s-a)*(s-b)*(s-c));
   printf("El valor del area es de: %.2f", area);

   return 0;
}
